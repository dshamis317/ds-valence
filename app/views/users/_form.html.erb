<%= form_for @user do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username %> <br> <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :email_confirmation %>
    <%= f.text_field :email_confirmation %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>
<% end %>
